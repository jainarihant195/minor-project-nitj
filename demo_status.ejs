    <script src="../path/to/flowbite/dist/flowbite.min.js"></script>
    <script>

        const upout = async () => {
            let un = sessionStorage.getItem("roll");

            console.log(un)
            const response = await fetch("https://gate-pass-nitj.onrender.com/status", {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',

                },
                body: JSON.stringify({ un: un })
            })
            const json = await response.json()
            console.log(json)
            let tbody = document.getElementById('tbody')

            if(json.rows.length===0)
            {tbody.innerHTML=`<tr>
                                    <td colspan="3">No Data available</td>
                                </tr>`}


            for (let i = 0; i < json.rows.length; i++) {
                tbody.innerHTML = tbody.innerHTML + `
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">

<td class="abc">
    ${i + 1}
</td>
<td class="px-6 py-4">
    
    ${json.rows[i].roll}
    </td>
    <td class="px-6 py-4">
        ${json.rows[i].name}
        </td>
        <td class="px-6 py-4">
            ${json.rows[i].section}
            
            </td>
            <td class="px-6 py-4 ">
                ${json.rows[i].hostel}
                
                </td>
                <td class="px-6 py-4">
                    ${json.rows[i].date}
                   
                    </td>
                    <td class="px-6 py-4">
                        ${json.rows[i].reason}
                        
                        </td>
                        <td class="px-6 py-4 status" id="${i}">
                            ${json.rows[i].status}
                           
                            </td>
                            <td class="px-6 py-4">
                                ${json.rows[i].phnum}
    
</td>



    <td class="px-6 py-4">
        <form class="" action="/download" method="post" target="_blank">
        <input type="text" name="aid" hidden value="${json.rows[i].id}">
        <button type="submit" name="download" id="a${i}" 
            class="font-medium text-blue-600 dark:text-blue-500 hover:underline" >Download</button>
        </form>
    </td>


</tr>
`
var status = document.getElementById(i).innerHTML;
                                var btn = document.getElementById("a"+i);
                                    console.log(btn)
                                if (status.trim() !== "Approved") {
                                    btn.disabled = true;
                                    btn.style.cursor = "not-allowed";
                                    console.log("not approved")
                                }
                                if (status.trim() === "Approved") {
                                    btn.disabled = false;
                                    btn.style.cursor = "pointer";
                                    console.log("Working")
                                }


    }
    }
    upout()
    </script>
